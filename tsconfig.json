{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "allowJs": true,
    "strict": false,

    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Only this, nothing else here:
    "types": ["vite/client"],

    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@animations/*": ["components/layout/animations/*"],
      "@css/*": ["css/*"],
      "@styles/*": ["styles/*"],
      "@data/*": ["data/*"],
      "@/types/*": ["types/*"],
    }
  },
  "include": ["src"]
}